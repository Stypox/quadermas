<resources>
    <style name="DarkAppTheme" parent="@style/Theme.AppCompat">
        <item name="isLightTheme">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="color_mark_not_classified">#FFFFFF</item>
        <item name="color_mark_failing">#E00000</item>
        <item name="color_mark_halfway">#E0E000</item>
        <item name="color_mark_excellent">#00E000</item>

        <item name="ic_arrow_drop_down">@drawable/ic_arrow_drop_down_white_24dp</item>
        <item name="ic_storage">@drawable/ic_storage_white_24dp</item>
        <item name="ic_timeline">@drawable/ic_timeline_white_24dp</item>
        <item name="ic_assignment">@drawable/ic_assignment_white_24dp</item>
        <item name="ic_description">@drawable/ic_description_white_24dp</item>
        <item name="ic_person">@drawable/ic_person_white_24dp</item>
        <item name="ic_settings">@drawable/ic_settings_white_24dp</item>
        <item name="ic_code">@drawable/ic_code_white_24dp</item>
        <item name="ic_bug_report">@drawable/ic_bug_report_white_24dp</item>
        <item name="ic_palette">@drawable/ic_palette_white_24dp</item>
        <item name="ic_home">@drawable/ic_home_white_24dp</item>
        <item name="ic_info_outline">@drawable/ic_info_outline_white_24dp</item>
    </style>

    <style name="LightAppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="isLightTheme">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="color_mark_not_classified">#000000</item>
        <item name="color_mark_failing">#B20000</item>
        <item name="color_mark_halfway">#B2B200</item>
        <item name="color_mark_excellent">#00B200</item>

        <item name="ic_arrow_drop_down">@drawable/ic_arrow_drop_down_black_24dp</item>
        <item name="ic_storage">@drawable/ic_storage_black_24dp</item>
        <item name="ic_timeline">@drawable/ic_timeline_black_24dp</item>
        <item name="ic_assignment">@drawable/ic_assignment_black_24dp</item>
        <item name="ic_description">@drawable/ic_description_black_24dp</item>
        <item name="ic_person">@drawable/ic_person_black_24dp</item>
        <item name="ic_settings">@drawable/ic_settings_black_24dp</item>
        <item name="ic_code">@drawable/ic_code_black_24dp</item>
        <item name="ic_bug_report">@drawable/ic_bug_report_black_24dp</item>
        <item name="ic_palette">@drawable/ic_palette_black_24dp</item>
        <item name="ic_home">@drawable/ic_home_black_24dp</item>
        <item name="ic_info_outline">@drawable/ic_info_outline_black_24dp</item>
    </style>

    <style name="BlackAppTheme" parent="DarkAppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>
